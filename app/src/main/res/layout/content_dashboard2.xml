<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    tools:context=".activities.DashboardActivity"
    tools:showIn="@layout/activity_dashboard2">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reminderOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnPill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                app:fb_borderColor="#FFFFFF"
                app:fb_borderWidth="0dp"
                app:fb_defaultColor="@android:color/transparent"
                app:fb_focusColor="@color/colorPrimary"
                app:fb_iconResource="@drawable/pill_normal"
                app:fb_radius="0dp"
                app:fb_text=""
                app:fb_textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/view16"
                app:layout_constraintEnd_toStartOf="@+id/view11"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view15"
                app:layout_constraintVertical_bias="1.0" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnVaccine"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                app:fb_borderColor="#FFFFFF"
                app:fb_borderWidth="0dp"
                app:fb_defaultColor="@android:color/transparent"
                app:fb_focusColor="@color/colorPrimary"
                app:fb_iconResource="@drawable/vaccine_normal"
                app:fb_radius="0dp"
                app:fb_text=""
                app:fb_textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/view16"
                app:layout_constraintEnd_toStartOf="@+id/view12"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view11"
                app:layout_constraintTop_toBottomOf="@+id/view15" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnAppointment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                app:fb_borderColor="#FFFFFF"
                app:fb_borderWidth="0dp"
                app:fb_defaultColor="@android:color/transparent"
                app:fb_focusColor="@color/colorPrimary"
                app:fb_iconResource="@drawable/appointment_normal"
                app:fb_radius="0dp"
                app:fb_text=""
                app:fb_textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/view16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view12"
                app:layout_constraintTop_toBottomOf="@+id/view15" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnInstructions"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                app:fb_borderColor="#FFFFFF"
                app:fb_borderWidth="0dp"
                app:fb_defaultColor="@android:color/transparent"
                app:fb_focusColor="@color/colorPrimary"
                app:fb_iconResource="@drawable/info"
                app:fb_radius="0dp"
                app:fb_text=""
                app:fb_textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/view16"
                app:layout_constraintEnd_toStartOf="@+id/view11"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view15"
                app:layout_constraintVertical_bias="1.0" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnFactors"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                app:fb_borderColor="#FFFFFF"
                app:fb_borderWidth="0dp"
                app:fb_defaultColor="@android:color/transparent"
                app:fb_focusColor="@color/colorPrimary"
                app:fb_iconResource="@drawable/info"
                app:fb_radius="0dp"
                app:fb_text=""
                app:fb_textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/view16"
                app:layout_constraintEnd_toStartOf="@+id/view12"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view11"
                app:layout_constraintTop_toBottomOf="@+id/view15" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnMistake"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                app:fb_borderColor="#FFFFFF"
                app:fb_borderWidth="0dp"
                app:fb_defaultColor="@android:color/transparent"
                app:fb_focusColor="@color/colorPrimary"
                app:fb_iconResource="@drawable/info"
                app:fb_radius="0dp"
                app:fb_text=""
                app:fb_textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/view16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view12"
                app:layout_constraintTop_toBottomOf="@+id/view15" />

            <View
                android:id="@+id/view11"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#000000"
                app:layout_constraintBottom_toTopOf="@+id/view16"
                app:layout_constraintEnd_toStartOf="@+id/view12"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view15" />

            <View
                android:id="@+id/view12"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#000000"
                app:layout_constraintBottom_toTopOf="@+id/view16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view11"
                app:layout_constraintTop_toBottomOf="@+id/view15" />

            <View
                android:id="@+id/view15"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4" />

            <View
                android:id="@+id/view16"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/view15" />

            <TextView
                android:id="@+id/tvPill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pill"
                app:layout_constraintEnd_toEndOf="@+id/btnPill"
                app:layout_constraintStart_toStartOf="@+id/btnPill"
                app:layout_constraintTop_toBottomOf="@+id/btnPill" />

            <TextView
                android:id="@+id/tvVaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Vaccine"
                app:layout_constraintEnd_toEndOf="@+id/btnVaccine"
                app:layout_constraintStart_toStartOf="@+id/btnVaccine"
                app:layout_constraintTop_toBottomOf="@+id/btnVaccine" />

            <TextView
                android:id="@+id/tvAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Appointment"
                app:layout_constraintEnd_toEndOf="@+id/btnAppointment"
                app:layout_constraintStart_toStartOf="@+id/btnAppointment"
                app:layout_constraintTop_toBottomOf="@+id/btnAppointment" />

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Instructions"
                app:layout_constraintEnd_toEndOf="@+id/btnInstructions"
                app:layout_constraintStart_toStartOf="@+id/btnInstructions"
                app:layout_constraintTop_toBottomOf="@+id/btnInstructions" />

            <TextView
                android:id="@+id/tvFactors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Factors"
                app:layout_constraintEnd_toEndOf="@+id/btnFactors"
                app:layout_constraintStart_toStartOf="@+id/btnFactors"
                app:layout_constraintTop_toBottomOf="@+id/btnFactors" />

            <TextView
                android:id="@+id/tvMistake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Mistake"
                app:layout_constraintEnd_toEndOf="@+id/btnMistake"
                app:layout_constraintStart_toStartOf="@+id/btnMistake"
                app:layout_constraintTop_toBottomOf="@+id/btnMistake" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="btnVaccine,btnAppointment,tvPill,tvVaccine,tvAppointment,btnPill" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="btnInstructions,btnFactors,tvInstructions,tvFactors,tvMistake,btnMistake" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupLines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="view11,view12,view15,view16" />


            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle"
                android:elevation="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_icon"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/imageButton3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="29dp"
                android:background="@drawable/circle"
                android:elevation="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reminder_icon"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/ivInformation"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageButton4"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageButton
                android:id="@+id/ivInformation"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle"
                android:elevation="2dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/info"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageButton3"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:text="@string/dashboard"
                app:layout_constraintEnd_toEndOf="@+id/imageButton4"
                app:layout_constraintStart_toStartOf="@+id/imageButton4"
                app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:text="@string/reminder"
                app:layout_constraintEnd_toEndOf="@+id/imageButton3"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="@+id/imageButton3"
                app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:text="Information"
                app:layout_constraintEnd_toEndOf="@+id/ivInformation"
                app:layout_constraintStart_toStartOf="@+id/ivInformation"
                app:layout_constraintTop_toBottomOf="@+id/ivInformation" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:elevation="1dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/menu_cover_old" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="imageView,textView6,textView5,textView4,ivInformation,imageButton3,imageButton4" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>