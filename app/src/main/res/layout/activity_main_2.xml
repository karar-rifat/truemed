<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_bg"
        android:layout_gravity="center_horizontal"
        android:padding="15dp">
    <ImageView
            android:id="@+id/cross"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cross"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="3dp"/>
    <TextView
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"/>
</LinearLayout>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_login"
        android:layout_marginTop="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="80dp">
    <ImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_user"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="30dp"
            tools:ignore="VectorDrawableCompat"/>
    <EditText
            android:id="@+id/registerName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="Name"
            android:inputType="text"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/user_icon"
            android:theme="@style/editTextTheme"/>
    <ImageView
            android:id="@+id/email_icon"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_email"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_icon"
            android:layout_marginRight="30dp"
            tools:ignore="VectorDrawableCompat"/>
    <EditText
            android:id="@+id/registerEmail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/registerName"
            android:layout_toRightOf="@+id/user_icon"
            android:theme="@style/editTextTheme"/>
    <ImageView
            android:id="@+id/password_icon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_password"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/email_icon"
            android:layout_marginRight="30dp"
            tools:ignore="VectorDrawableCompat"/>
    <EditText
            android:id="@+id/registerDob"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="@string/dob_label"
            android:focusable="false"
            android:inputType="text"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/registerEmail"
            android:layout_toRightOf="@+id/user_icon"
            android:theme="@style/editTextTheme"/>
    <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_calendar"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/password_icon"
            android:layout_marginRight="30dp"
            tools:ignore="VectorDrawableCompat"/>
    <EditText
            android:id="@+id/registerPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/registerDob"
            android:layout_toRightOf="@+id/user_icon"
            android:theme="@style/editTextTheme"/>
    <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/registerPassword"/>
</RelativeLayout>
<de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="105dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_user_logo"
        app:civ_circle_background_color="#cccccc"/>
</FrameLayout>